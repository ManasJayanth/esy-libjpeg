{
  "name": "esy-libjpeg",
  "version": "0.0.000",
  "description": "libjpeg packaged for esy",
  "esy": {
    "buildsInSource": true,
    "build": [
      "mkdir -p #{self.install / 'man' / 'man1'}",
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  }
}
